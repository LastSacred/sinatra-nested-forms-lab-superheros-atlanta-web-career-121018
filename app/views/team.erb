<h1>Create a Team and Heroes!</h1>

<form action="/team" method="POST">
  <p>Team Name: <input type="text" name="team[name]"></p>
  <p>Team Motto: <input type="text" name="team[motto]"></p>
  <% i=1
   while i<5 %>
     <h2>Hero <%= i %></h2>
     <p>Hero's Name: <input type="text" name="team[members][][name]" ></p>
     <p>Hero's Power: <input type="text" name="team[members][][power]"></p>
     <p>Hero's Biography: <input type="text" name="team[members][][biography]"></p>
     <% i += 1 %>

     <% end %>
     <input type="submit">
     </form>
